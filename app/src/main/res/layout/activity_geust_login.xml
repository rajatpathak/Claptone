<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCustPrimaryDark"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_gravity="center_vertical"
    tools:context=".activities.ActivityGeustLogin">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_margin="@dimen/margin_16dp"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/back_btn"/>
    <LinearLayout
        android:layout_margin="@dimen/margin_16dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:id="@+id/layout"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/usernameWrapper"
            android:hint="Name"
            android:textColorHint="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:backgroundTint="@color/colorOrange"
            android:textSize="20dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="8dp"
            android:id="@+id/emailWrapper"
            android:layout_width="match_parent"
            android:textColorHint="@color/colorAccent"
            android:hint="Email"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/idEmail"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorOrange"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorOrange"
            android:textColorHint="@color/colorOrange" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pswdWrapper"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:textColorHint="@color/colorAccent"
            android:hint="******"
            android:layout_height="wrap_content">
        <EditText
            android:textSize="14dp"
            android:id="@+id/idPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorOrange"
            android:inputType="textPassword"
            android:textColor="@color/colorOrange"
            android:textColorHint="@color/colorOrange" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cnfPswdWrapper"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/colorAccent"
            android:hint="******"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:textSize="14dp"
            android:id="@+id/idConPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorOrange"
            android:inputType="textPassword"
            android:textColor="@color/colorOrange"
            android:textColorHint="@color/colorOrange" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:text="@string/signup_login_str"/>
        <TextView
            android:id="@+id/tvLogin"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_16dp"
            android:textColor="@color/colorWhite"
            android:text="@string/signup_login"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight=".2"
        android:paddingBottom="@dimen/margin_16dp"
        android:weightSum="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <View
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorOrange"/>

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/colorOrange"
            android:src="@drawable/go_nxt" />
    <View
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorOrange"/>
    </LinearLayout>
</LinearLayout>